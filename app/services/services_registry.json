{
  "auth.cookies.redis": {
    description: "Cookie-based auth with Redis sessions",
    category: "auth",
    requiredFields: {
      login:   { type: "string", description: "Login identifier field" },
      password:{ type: "string", description: "Password field" }
    },
    optionalFields: {
      sessionIdentifier: { type: "string", default: "id" }
    },
    options: {                    // rename to something semantic
      timeout: 400               // actual numeric value
    },
    implementation: {
      module: "app.services.auth.cookies.redis_provider",
      class: "AuthCookiesRedis"
    }
  }
}

